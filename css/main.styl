@import "fonts.styl"
azul_oscuro = #27282d
azul_gris = #464d4b
azul_gris_verde = #435555
gris = #879999
beige = #afa376
azul_claro = #a9cdcd
body
	background-color: #ABABAB;
	font-family: Aller Regular
footer
	background azul_oscuro
	margin-top 50px
	padding 30px
	text-align center
	font-family Aller Italic
	span
		color white
	a
		color white
header
	background: azul_oscuro
	margin: 0 auto;
	padding: 10px;
	color: white;
	text-align: center;
	h1
		font-size: 50px;
		font-family: Kaushan;
		position relative
		width: 55%;
		margin: 0 auto;
		padding: 10px;
		&:before
			content ""
			border-bottom 1px solid white
			color rgb(27, 27, 27);
			position absolute
			left 0
			top 40px
			width 25%
		&:after
			content ""
			border-bottom 1px solid white
			color rgb(27, 27, 27);
			width 25%
			position absolute
			right 0
			top 40px
			
.info
	margin 0
	margin-top 10px
	width 90%
.skills
	background white
	padding: 10px;
	margin-top: 10px;
	border: 1.5px solid #343434;
	box-shadow: 0px 1px 1px 0px;
	.row
		margin 0
	
	

.icon
	font-size 50px
	color azul_oscuro
.title-skill
	border-bottom 1px solid black
	h3
		color azul_oscuro;
.tag-skill
	span
		background azul_gris_verde
		color: white;
		padding: 0px 2px;
		border-radius: 10%;
.content-skill
	font-family Aller Italic
	padding 5px

.bio
	background white
	margin 0 auto
	text-align center
	padding 10px
	border: 1.5px solid #343434;
	box-shadow: 0px 1px 1px 0px;
	margin-left 30px
	.row
		margin 0
	.img-bio
		width 100%
		text-align center
		img
			width 40%
			border-radius 50%
.name-bio
	font-family Aller Bold
.des-bio
	font-family Aller Italic
	padding: 10px 40px;
	border-bottom 1px solid gris
.relation
	background azul_oscuro
	position: relative;
	top: 150px;
	width: 20%;
	&:before
		content ""
		position absolute
		right 0
		border-bottom: 10px solid rgba(255, 255, 0, 0);
		border-top: 10px solid transparent;
		border-left: 10px solid azul_oscuro;
		top: -9px;
.social
	margin-top 10px
	padding 10px
	a
		padding 0px 5px
		font-size: 20px;
		color azul_gris
.blog
	margin 0 auto
	background white
	margin-top 70px
	width 95%
	border: 1.5px solid #343434;
	box-shadow: 0px 1px 1px 0px;
	padding 10px
	margin-bottom 20px
	.title-blog
		text-align center
		padding 10px
		h2
			margin 0 auto
			padding 10px
			border-bottom 1px solid black
			width 50%
			color azul_oscuro
			
			span
				padding 10px
	.des-blog
		text-align center
		font-family Aller Italic
		font-size 16px
.posts
	padding 10px
	overflow hidden
	a
		color black
.img-post
	width: 100%;
	height: 200px;
	border: 1px solid azul_oscuro;
	margin-top 10px

.post
	border 1px solid
	width 30%
	margin-left 20px
	background #EBECEC
	margin-top 40px
	
	.title-post
		font-family Aller Bold
		padding 5px
		text-align center
		border-bottom 1px solid azul_gris
		
.fecha
	a
		color #008cba
	span
		font-size 14px
.tags
	padding 10px
	span
		background azul_gris_verde
		color: white;
		padding: 0px 2px;
		border-radius: 10%;
.see
	text-align center
	padding 10px
	margin 0 auto
	margin-top 40px
	border 1px solid azul_oscuro
	width 30%
	cursor pointer
	a
		color azul_oscuro
	&:hover
		background azul_oscuro
		a
			color white
			
.subscribe
	margin-top 30px
	margin-left 10%
	background white
	border: 1.5px solid #343434;
	box-shadow: 0px 1px 1px 0px;

@media screen and (max-width:800px)
	header
		h1
			&:before
				width 0px
			&:after
				width 0px

@media screen and (max-width:768px)
	.info
		margin 0 auto
		padding 20px
		
	.bio
		margin-left 0
		margin 0 auto
		margin-top 10px
		margin-bottom 70px
	
	.post
		width 80%
		margin-left 10%	
	

@media screen and (max-width:350px)

	header
		h1
			left -50px
	
