@import "fonts.styl"

body
	background-color: #909090;
	font-family: Aller Regular

nav
	background: rgb(27, 27, 27);
	margin: 0 auto;
	padding: 10px;
	color: white;
	text-align: center;
	h2
		font-size: 50px;
		font-family: Kaushan;
		position relative
		width: 55%;
		margin: 0 auto;
		padding: 10px;
		&:before
			content ""
			border-bottom 1px solid white
			color rgb(27, 27, 27);
			position absolute
			left 0
			top 40px
			width 25%
		&:after
			content ""
			border-bottom 1px solid white
			color rgb(27, 27, 27);
			width 25%
			position absolute
			right 0
			top 40px
			
.skills
	background white
	padding: 10px;
	margin-top: 10px;
	border: 1.5px solid #343434;
	box-shadow: 0px 1px 1px 0px;
	

.icon
	font-size 50px
.title-skill
	border-bottom 1px solid black
	h3
		color: black;
@media screen and (max-width:800px)
	nav
		h2
			&:before
				width 0px
			&:after
				width 0px


@media screen and (max-width:350px)

	nav
		h2
			left -50px